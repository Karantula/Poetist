<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.slaptrap.poetist.MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/keywordA"
        android:hint="Keyword" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/keywordA"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/keywordB"
        android:hint="Keyword" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/keywordB"
        android:layout_alignRight="@+id/keywordB"
        android:layout_alignEnd="@+id/keywordB"
        android:id="@+id/keywordC"
        android:hint="Keyword" />

    <Button
        android:text="Poetry!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/keywordC"
        android:layout_centerHorizontal="true"
        android:id="@+id/submitButton"
        android:onClick="poetry" />

    <TextView
        android:text="Pjesma ovde"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/submitButton"
        android:layout_centerHorizontal="true"
        android:id="@+id/poetryResult" />
</RelativeLayout>
